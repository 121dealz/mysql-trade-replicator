string quote(string s)
  {
   return("'" + s + "'");
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string doublequote(string s)
  {
   return("\"" + s + "\"");
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string backquote(string s)
  {
   return("`" + s + "`");
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
string StringTrim(string str)
  {
   str = StringTrimLeft(str);
   str = StringTrimRight(str);

   return (str);
  }
